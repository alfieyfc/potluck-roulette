<%= form_for(:user, :url => session_path(:user)) do |f| %>
  <div class="mb-3">
    <%= f.label :email, class:"col-sm-2 col-form-label" %>
    <%= f.text_field :email, class:"col-sm-10" %>
  </div>
  <div class="mb-3">
    <%= f.label :password, class:"col-sm-2 col-form-label" %>
    <%= f.password_field :password, class:"col-sm-10" %>
  </div>
  <%= f.check_box :remember_me %>
  <%= f.label :remember_me %><br />
  <%= f.submit 'Sign in' %><br />
  <%= link_to "Sign up new account", new_user_registration_path %>
  <%= link_to "Forgot password?", new_password_path(:user) %>
<% end %>
