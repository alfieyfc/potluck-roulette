<% if flash %>
  <%= render 'layouts/alerts' %>
<% end %>

<div class="container mt-4">

  <%= render @dish %>

  <div class="m-2">
    <% if current_user.id == @dish.user_id %>

    <div class="row">
      <div class="col-3 p-0 m-1">
        <%= button_to "Edit this dish", edit_dish_path(@dish), method: :get, class: "btn-sm w-100" %>
      </div>
      <div class="col-3 p-0 m-1">
        <%= button_to "Remove this dish", @dish, method: :delete, class: "btn-sm w-100" %>
      </div>

      <% end %>
    </div>
    <div class="row">
      <div class="col-3 p-0 m-1">
        <%= button_to "Back to event", event_path(@dish.event_id), method: :get, class: "btn-sm w-100" %>
      </div>
    </div>
  </div>

</div>
