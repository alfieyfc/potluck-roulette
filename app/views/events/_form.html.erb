<%= form_with(model: event) do |form| %>
<% if event.errors.any? %>
<div style="color: red">
  <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

  <ul>
    <% event.errors.each do |error| %>
    <li><%= error.full_message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="row my-2">
  <%= form.label "Title of your event:", class: "d-block p-0" %>
  <%= form.text_field :title %>
</div>

<div class="row my-2">
  <%= form.label :event_date, class: "d-block p-0" %>
  <%= form.date_field :event_date %>
</div>

<div class="row my-2">
  <div class="col-12 p-0">
    <%= form.label "Max Number of Players:", class: "d-inline" %><span> </span><span id="rangeval"
      class="d-inline">2</span>
  </div>
  <%= form.range_field :max_players, id: "max_player", in: 1..8, step: 1, value: 2, class: "d-block", oninput: 'document.getElementById("rangeval").innerText = document.getElementById("max_player").value' %>
</div>

<div class="row my-2">
  <span class="px-0">
    <%= form.label :public %>
    <%= form.check_box  :public %>
  </span>
</div>

<div class="row my-2">
  <%= form.hidden_field :owner_id, value: current_user.id, style: "display: block" %>
  <%= form.hidden_field :room_id, value: @new_room_id, style: "display: block" %>
</div>

<div class="row my-2">
  <div class="col-3 p-0">
    <%= form.submit :class => "btn btn-primary w-100 p-0" %>
  </div>
</div>
<% end %>
