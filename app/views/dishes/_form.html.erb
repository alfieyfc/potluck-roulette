<%= form_with(model: dish) do |form| %>
<% if dish.errors.any? %>
<div style="color: red">
  <h2><%= pluralize(dish.errors.count, "error") %> prohibited this dish from being saved:</h2>

  <ul>
    <% dish.errors.each do |error| %>
    <li><%= error.full_message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="row my-2">
  <div class="col">
    <%= form.label "Name of your dish:" %>
    <%= form.text_field :name, class: "w-100 d-block p-0" %>
  </div>
</div>

<div class="row my-2">
  <div class="col">
    <%= form.label "Image URL:" %>
    <%= form.text_field :img_url, class: "w-100 d-block p-0" %>
  </div>
</div>

<div class="row my-2">
  <div class="col">
    <%= form.hidden_field :user_id, value: current_user.id %>

    <% if dish.event_id %>
      <%= form.hidden_field :event_id, value: dish.event_id %>
    <% else %>
      <%= form.hidden_field :event_id, value: params[:event_id] %>
    <% end %>
  </div>
</div>

<div class="row my-2">
  <div class="col">
    <%= form.submit :class => "btn btn-primary w-100 p-0" %>
  </div>
</div>
<% end %>
