<table class="table">
  <thead>
    <tr>
      <th scope="col">Participants</th>
    </tr>
  </thead>
  <tbody>
  <% @participations.where(event_id: @event.id).each do |participation| %>
    <tr>
      <td>
        <% user = @users.find_by(id: participation.user_id) %>
        <%= user.name %>
      </td>
      <td>
        <% if user.id == @event.owner_id %>
          Host
        <% else %>
          Guest
        <% end %>
      </td>
    </tr>
  <% end %>

  </tbody>
</table>
