<div class="container mt-4">

  <div class="row text-center">
    <h2>Account Settings</h2>
  </div>

  <div class="row my-2">
    <div class="col offset-md-3 col-md-6">
      <!-- Button trigger modal -->
      <button type="button" class="form-control btn btn-secondary" data-toggle="modal" data-target="#exampleModal">
        History
      </button>
    </div>
  </div>

  <div class="row my-2">
    <div class="col offset-md-3 col-md-6">
      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Events You've Participated</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <div class="row d-none d-md-block">
                <div class="col">
                  <%= render 'events/history' %>
                </div>
              </div>
              <div class="row d-block d-md-none">
                <div class="col">
                  <%= render 'events/history_sm' %>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="row my-2">
      <div class="col offset-md-3 col-md-6">
        <div class="field form-group py-1">
          <%= f.label "Account (Email)" %><br />
          <%= f.email_field :email, placeholder: "Account (Email)", autocomplete: true, required: true, class: "form-control" %>
        </div>
      </div>
    </div>


    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>


    <div class="row my-2">
      <div class="col offset-md-3 col-md-6">
        <div class="field form-group py-1">
          <%= f.label "Your name" %><br />
          <%= f.text_field :name, placeholder: "Name", required: true, autocomplete: true, class: "form-control" %>
        </div>
      </div>
    </div>



    <div class="row my-2">
      <div class="col offset-md-3 col-md-6">
        <div class="field form-group py-1">
          <%= f.label "New Password" %> <i>(leave blank if you don't want to change it)</i><br />
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
          <%= f.password_field :password, placeholder: "New Password", autocomplete: "new-password", class: "form-control" %>

        </div>
      </div>
    </div>



    <div class="row my-2">
      <div class="col offset-md-3 col-md-6">
        <div class="field form-group py-1">
          <%= f.label "New Password Confirmation" %>
          <%= f.password_field :password_confirmation, placeholder: "Re-type new password", autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>
    </div>



    <div class="row my-2">
      <div class="col offset-md-3 col-md-6">
        <div class="field form-group py-1">
          <%= f.label "Current Password" %>
          <i>(required to make updates!)</i><br />
          <%= f.password_field :current_password, placeholder: "Current password", required: true, autocomplete: "current-password", class: "form-control" %>
        </div>
      </div>
    </div>


    <div class="row my-2">
      <div class="col offset-md-3 col-md-6">
        <div class="actions form-group py-1">
          <%= f.submit "Update", class: "btn, btn-primary form-control" %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row my-2">
    <div class="col offset-md-4 col-md-4">
      <%= button_to "Back", root_path, method: :get, class: "btn-sm w-100" %>
    </div>
  </div>

  <hr>

  <div class="row my-2">
    <div class="col offset-md-4 col-md-4">
      <h3>Cancel my account</h3>
      <p>Unhappy with Potluck Roulette? <%= button_to "Cancel my account", registration_path(resource_name), form: {data: { turbo_confirm: "All of your history will be removed. Are you sure you want to leave us?" }}, method: :delete, class: "btn-sm btn-danger w-100" %></p>
    </div>
  </div>
</div>
