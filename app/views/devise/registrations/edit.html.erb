<div class="container mt-4">

  <div class="row text-center">
    <h2><%= t('devise.registration_edit.title') %></h2>
  </div>

  <div class="row my-2">
    <div class="col offset-md-3 col-md-6">
      <!-- Button trigger modal -->
      <button type="button" class="form-control btn btn-secondary" data-toggle="modal" data-target="#exampleModal">
        <%= t('devise.registration_edit.history_btn') %>
      </button>
    </div>
  </div>

  <div class="row my-2">
    <div class="col offset-md-3 col-md-6">
      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel"><%= t('devise.registration_edit.history_modal_title') %></h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <div class="row d-none d-md-block">
                <div class="col">
                  <%= render 'events/history' %>
                </div>
              </div>
              <div class="row d-block d-md-none">
                <div class="col">
                  <%= render 'events/history_sm' %>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t('common.close_btn') %></button>
              <button type="button" class="btn btn-primary"><%= t('common.ok_btn') %></button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="row my-2">
      <div class="col offset-md-3 col-md-6">
        <div class="field form-group py-1">
          <%= f.label t('devise.form.account') %><br />
          <%= f.email_field :email, placeholder: t('devise.form.account'), autocomplete: true, required: true, class: "form-control" %>
        </div>
      </div>
    </div>


    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>


    <div class="row my-2">
      <div class="col offset-md-3 col-md-6">
        <div class="field form-group py-1">
          <%= f.label  t('devise.form.name') %><br />
          <%= f.text_field :name, placeholder:  t('devise.form.name'), required: true, autocomplete: true, class: "form-control" %>
        </div>
      </div>
    </div>



    <div class="row my-2">
      <div class="col offset-md-3 col-md-6">
        <div class="field form-group py-1">
          <%= f.label  t('devise.form.new_password') %>
          <i><sub>
            <%=  t('devise.form.new_password_note') %>
            <% if @minimum_password_length %>
              <%=  "#{t('devise.form.new_password_rule', minimum_password_length: @minimum_password_length)}" %>
            <% end %>
          </sub></i>
          <%= f.password_field :password, placeholder:  t('devise.form.new_password'), autocomplete: "new-password", class: "form-control" %>

        </div>
      </div>
    </div>



    <div class="row my-2">
      <div class="col offset-md-3 col-md-6">
        <div class="field form-group py-1">
          <%= f.label  t('devise.form.new_password_confirm') %>
          <%= f.password_field :password_confirmation, placeholder:  t('devise.form.new_password_confirm_ph'), autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>
    </div>



    <div class="row my-2">
      <div class="col offset-md-3 col-md-6">
        <div class="field form-group py-1">
          <%= f.label t('devise.form.current_password') %>
          <i><sub><%= t('devise.form.current_password_reason') %></i></sub>
          <%= f.password_field :current_password, placeholder: t('devise.form.current_password'), required: true, autocomplete: "current-password", class: "form-control" %>
        </div>
      </div>
    </div>


    <div class="row my-2">
      <div class="col offset-md-3 col-md-6">
        <div class="actions form-group py-1">
          <%= f.submit t('devise.form.update_btn'), class: "btn, btn-primary form-control" %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row my-2">
    <div class="col offset-md-4 col-md-4">
      <%= button_to t('common.back_btn'), root_path, method: :get, class: "btn-sm w-100" %>
    </div>
  </div>

  <hr>

  <div class="row my-2">
    <div class="col offset-md-4 col-md-4">
      <h3><%= t('devise.registration_edit.cancel_title') %></h3>
      <p><%= raw t('devise.registration_edit.cancel_inquery') %></p>
      <%= button_to t('devise.registration_edit.cancel_btn'), registration_path(resource_name), form: {data: { turbo_confirm: t('devise.registration_edit.cancel_confirmation') }}, method: :delete, class: "btn-sm btn-danger w-100" %>
    </div>
  </div>
</div>
