<div class="container mt-4">

  <div class="row text-center">
    <h2>Change your password</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="row my-2">
      <div class="col offset-md-3 col-md-6">
        <div class="field form-group py-1">
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.password_field :password, placeholder: "New password", autofocus: true, required: true, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row my-2">
      <div class="col offset-md-3 col-md-6">
        <div class="field form-group py-1">
          <%= f.password_field :password_confirmation, placeholder: "Re-type new password", autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row my-2">
      <div class="col offset-md-3 col-md-6">
        <div class="actions form-group py-1">
            <%= f.submit "Change my password" %>
        </div>
      </div>
    </div>

  <% end %>
</div>
