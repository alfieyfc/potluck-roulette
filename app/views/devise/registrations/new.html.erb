<div class="container mt-4">

  <div class="row text-center">
    <h2><%= t('devise.registration_new.title')%></h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>


    <div class="row my-2">
      <div class="col offset-md-3 col-md-6">
        <div class="field form-group py-1">
          <%= f.label t('devise.form.account') %><br />
          <%= f.email_field :email, placeholder: t('devise.form.account'), required: true, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row my-2">
      <div class="col offset-md-3 col-md-6">
        <div class="field form-group py-1">
          <%= f.label t('devise.form.name') %><br />
          <%= f.text_field :name, placeholder: t('devise.form.name'), autofocus: true, required: true, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row my-2">
      <div class="col offset-md-3 col-md-6">
        <div class="field form-group py-1">
          <%= f.label t('devise.form.new_password') %>
          <% if @minimum_password_length %>
          <sub><%=  "#{t('devise.form.new_password_rule', minimum_password_length: @minimum_password_length)}" %></sub>
          <% end %>
          <%= f.password_field :password, placeholder: t('devise.form.new_password'), required: true, class: "form-control", autocomplete: "new-password" %>
        </div>
      </div>
    </div>

    <div class="row my-2">
      <div class="col offset-md-3 col-md-6">
        <div class="field form-group py-1">
          <%= f.label t('devise.form.new_password_confirm') %>
            <%= f.password_field :password_confirmation, placeholder: t('devise.form.new_password_confirm_ph'), required: true, class: "form-control", autocomplete: "new-password" %>
        </div>
      </div>
    </div>

    <div class="row my-2">
      <div class="col offset-md-3 col-md-6">
        <div class="actions form-group py-1">
          <%= f.submit t('devise.form.sign_up_btn'), class: "btn btn-primary form-control" %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row my-2">
    <div class="col offset-md-4 col-md-4">
      <%= button_to t('common.back_btn'), root_path, method: :get, class: "btn-sm w-100" %>
    </div>
  </div>
</div>
