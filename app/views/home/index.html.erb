
<% if flash %>
  <%= render 'layouts/alerts' %>
<% end %>

<div class="container mt-4">
  <div class="container p-0 position-relative">
        <%= image_tag 'favicon.svg'%>
        <% if user_signed_in? %>
          <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn-sm position-absolute top-0 end-0" %>
          <h2>Welcome, <%= current_user.name %>!!</h2>
        <% else %>
          <h2>Welcome to Potluck Roulette!!</h2>
        <% end %>


  <div class="row">
    <div class="col-4">
      <% if user_signed_in? %>
        <%= render 'user_menu' %>
      <% else %>
        <%= render 'login_form', locals: { resource: current_user, resource_name: :user }%>
      <% end %>
    </div>
    <div class="col-8 ps-0">
      <%= render "dishes/dish_carousel", dishes: @dishes.where.not(img_url: [nil, ""]).order(Arel.sql('RANDOM()')).first(3) %>
    </div>
  </div>

  <div class="row text-center mt-4">
  <h3>Up Coming Events</h3>
  </div>
  <div class="row">
    <div class="col-12">
      <%= render 'events/event_list' %>
    </div>
  </div>
    </div>

</div>
